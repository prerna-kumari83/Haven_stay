<%- layout("/layouts/boilerplate.ejs")%>

<body>
  <div class="row mt-8">
    <div class="col-8 offset-2">
      <h2 class="mt-3">Edit Listings</h2>
      <form
        action="/listings/<%= listing._id %>?_method=PUT"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3 mt-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listings[title]"
            value="<%= listing.title %>"
            id="title"
            class="form-control"
            required
          />
        </div>
        <div class="mt-3 mb-3">
          <label for="description" class="form-label">Description</label>

          <textarea
            name="listings[description]"
            class="form-control"
            id="description"
            required
          >
<%= listing.description %></textarea
          >
          <div class="invalid-feedback">Enter valid Description</div>
        </div>

        <div class="row" class="mb-3 mt-3">
          <div class="col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              name="listings[price]"
              class="form-control"
              id="price"
              value="<%= listing.price%>"
              placeholder="Price"
              required
            />
            <div class="invalid-feedback">Enter valid Price</div>
          </div>

          <div class="col-md-8 mb-3">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="listings[location]"
              id="location"
              value="<%= listing.location %>"
              placeholder="Location"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter valid Location</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="country" class="form-label">Country</label>

          <input
            type="text"
            name="listings[country]"
            value="<%= listing.country %>"
            required
            class="form-control"
          />
          <div class="invalid-feedback">Enter valid Country</div>
          <br /><br />
        </div>
        <div class="mt-3 mb-3">
          <button class="btn btn-dark" type="submit">Update Listing</button>
        </div>
      </form>
    </div>
  </div>
</body>
