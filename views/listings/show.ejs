<%- layout("/layouts/boilerplate.ejs")%>

<div
  class="row mt-2"
  class="card-title mt-3 mb-3"
  style="
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS',
      sans-serif;
  "
>
  <div class="col-8 offset-3">
    <h2 class="mt-3 mb-3">ðŸ˜Ž <%= listing.title%></h2>

    <div class="card card-list" style="width: 76%">
      <img
        src="<%= listing.image%>"
        class="card-img-top"
        style="height: 300px"
        alt="..."
      />
      <div class="card-body">
        <p><i>Owner by: <%= listing.owner.username%></i> </p>
        <h6 class="mt-3"><%= listing.description%></h6>
        <p class="card-text">
          &#8377;<%= listing.price.toLocaleString('en-IN') %>
        </p>
        <p class="card-text"><%= listing.location%> , <%= listing.country%></p>

<% if(currUser && listing.owner.equals(currUser._id)){%>
         <div class="show-button">
           <div>
             <a href="/listings/<%= listing._id%>/edit" class="btn btn-primary"
               >Edit Listing</a
             >
           </div>
           <div>
             <form
               action="/listings/<%= listing._id%>?_method=DELETE"
               method="POST"
             >
               <button type="submit" class="btn btn-dark">Delete Listing</button>
             </form>
           </div>
         </div>
         <% } %>
     
      </div>
    </div>
  </div>
  <hr class="col-6 offset-3" />

  <div class="col-8 offset-3 mt-3 mb-3">
    <% if(currUser){%>
    <h2>Add Review</h2>
   
    <form
      action="/listings/<%= listing._id%>/reviews"
      class="needs-validation"
      novalidate
      method="POST"
    >
   
      <div class="mt-3 mb-3">
           <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">

  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />    
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
      </div>
      <div class="mt-3 mb-3">
        <label for="comment">Comment:</label>
        <textarea
          name="review[comment]"
          id="comment"
          class="form-control"
          cols="3"
          rows="5"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter some comment!</div>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr class="col-6 offset-3" />
    <% }%>
  
  </div>

  <div class="col-8 offset-3 mt-3 mb-3">
    <h4>ALL REVIEWS</h4>
    <div class="row">
      <% for (let item of listing.reviews) { %>
      <div class="card col-4 mt-2 mb-3 ms-3 pl-2"  style="width: 18rem">
        <div class="card-body mt-2">
          <h5 class="card-title mt-2">@<%= item.author.username %></h5>


 <p class="starability-result card-text" data-rating="<%= item.rating %>">

  </p>
  <p class=" card-text" >
    <%= item.comment %>
  </p>

          <% if(currUser){%>
          <form   method="POST" action="/listings/<%= listing._id %>/reviews/<%= item._id %>?_method=DELETE">
            <button  class="btn btn-dark mb-3">DELETE</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
    </div>
  </div>
</div>
